version: '2'
services:
  # The Application
  app:
    build:
      context: ./docker
      dockerfile: app.dockerfile
    working_dir: /var/www
    volumes:
      - ./:/var/www
    restart: always
    environment:
      - "DB_PORT=3306"
      - "DB_HOST=database"

  # The Web Server
  web:
    build:
      context: ./docker
      dockerfile: web.dockerfile
    working_dir: /var/www
    volumes_from:
      - app
    restart: always
    ports:
      - 60080:80
  # The Database
  database:
    image: mysql:5.6
    volumes:
      - dbdata:/var/lib/mysql
    restart: always
    environment:
      - "MYSQL_DATABASE=webdb"
      - "MYSQL_USER=webdbuser"
      - "MYSQL_PASSWORD=Abc123"
      - "MYSQL_ROOT_PASSWORD=Uw*tm8?"
    ports:
        - "33063:3306"
  redis:
    image: redis
    restart: always  
    ports:
      - 6378:6378
  chrome:
    image: robcherry/docker-chromedriver
    environment:
       CHROMEDRIVER_WHITELISTED_IPS: ""
       CHROMEDRIVER_PORT: "9515"
    ports:
       - 9515:9515
    cap_add:
       - "SYS_ADMIN"
volumes:
  dbdata:
